{% extends "layoutAdmin.njk" %}

{% block header %}
{% endblock header %}
{% block content %}
    <section class="login container form">
        <form action="/admin/reset-password" method="post">
            <div class="login foodfy logo">
                <a href=""><p>FoodFy</p></a>
            </div>
            <div class="title">
                <h3>Nova Senha</h3>
            </div>
            <div class="login-field">
                <label for="">Email</label>
                <input type="text" name="email" value="{{user.email}}" placeholder="Digite seu Email"
                    onblur="Validate.apply(this, 'isItEmail')">
            </div>
            <div class="login-field">
                <label for="">Nova Senha</label>
                <input type="password" name="password" placeholder="Digite sua nova senha">
            </div>
            <div class="login-field">
                <label for="">Repetir Senha</label>
                <input type="password" name="passwordRepeat" placeholder="Repita a nova senha">
            </div>
            <div class="link">
                <button type="submit">Nova Senha</button>
            </div>
            <input type="hidden" name="token" value="{{token}}">
        </form>
    </section>
{% endblock content %}
{% block scripts %}
    <script src="/scripts/email-check.js"></script> 
{% endblock scripts %}