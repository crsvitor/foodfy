{% extends "layoutAdmin.njk" %}

{% block header %}
{% endblock header %}
{% block content %}
    <section class="login container form">
        <form action="/admin/forgot-password" method="post">
            <div class="login foodfy logo">
                <a href=""><p>FoodFy</p></a>
            </div>
            <div class="title">
                <h3>Esqueceu a Senha?</h3>
            </div>
            <div class="login-field">
                <label for="">Email</label>
                <input type="text" name="email" value="{{user.email}}" placeholder="Digite seu Email"
                    onblur="Validate.apply(this, 'isItEmail')">
            </div>
            <div class="link">
                <button type="submit">Recuperar</button>
            </div>
        </form>
    </section>
{% endblock content %}
{% block scripts %}
    <script src="/scripts/email-check.js"></script> 
{% endblock scripts %}